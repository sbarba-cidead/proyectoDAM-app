<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app_screens.secondary_screens.QuizQuestionScreen">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <TextView
            android:id="@+id/countdownTimer"
            android:layout_marginVertical="10dp"
            tools:text="04:00"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/general_rounded_corners_noborder"
            android:backgroundTint="@color/grey_transparent"
            android:textColor="@color/light_red"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/counter"
            tools:text="1 / 4"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/questionNumberTextView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            tools:text="Pregunta 1"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/white_transparent"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/questionContentTextView"
            tools:text="Este es el contenido de la pregunta.
            Este es el contenido de la pregunta. Texto"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/answer1Button"
                tools:text="Respuesta 1"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/answer2Button"
                tools:text="Respuesta 2"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/answer3Button"
                tools:text="Respuesta 3"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/answer4Button"
                tools:text="Respuesta 4"
                android:textSize="20sp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:text="@string/nextQuestionButton_text"
            android:textSize="20sp"
            android:paddingHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:visibility="visible" />

        <Button
            android:id="@+id/finishButton"
            android:text="@string/finishButton_text"
            android:textSize="20sp"
            android:paddingHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>